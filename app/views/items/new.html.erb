<div id="item-new">
  <div class="container">

    <%= form_with model: @item, url: items_path, local: true, method: :item do |f| %>
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>
      <%= f.label :image, "画像" %>
      <%= f.file_field :image %>
      <%= f.label :price, "価格" %>
      <%= f.text_field :price %>
      <%= f.text_field :amazon_url %>
      <%= f.label :amazon_url, "Amazonリンク" %>

      <%= f.submit "投稿" %>
    <% end %>
  </div>
</div>