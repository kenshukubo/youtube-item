<div id="category-item">
  <div class="container">
    <h2 class="category-title"><%= @category.name %></h2>
    <ul class="category-wrapper">
      <%= @categories.find_each do |category| %>
        <%= link_to category_path(category.id) do %>
          <li class="category">
            <p class="category-child-title"><%=category.name%></p>
          </li>
        <% end %>
      <% end %>
    </ul>
    <div class="column-main">
      <h2 class="category-title">Youtuberのおすすめアイテム</h2>
        
        <% if @items.present? %>
          <ul class="item-wrapper-for-pc">
            <%= @items.find_each do |item| %>
              <li class="item">
                <%= image_tag item.image.url, class:"item-img" %>
                <div>
                  
                  <%= ItemPost.where(item: item).find_each do |item_post| %>
                    <%=link_to youtuber_path(item_post.post.youtuber_id), class:"youtuber-info" do %>
                      <%=image_tag Youtuber.find(item_post.post.youtuber_id).image.url, class:"channel-icon" %>
                    <% end %>
                  <% end %>

                  <% if item.amazon_url %>
                    <%=link_to item.name, item.amazon_url, class:"item-name", target: :_blank %>
                  <% else %>
                    <%=link_to item.name, item.rakuten_url, class:"item-name", target: :_blank %>
                  <% end %>

                  <% item_category = PostItemCategory.find_by(item: item) %>
                  <% if item_category.present? %>
                    <%= link_to category_path(item_category.category_id), class:"item-category" do %>
                      <span class="category-child-title">
                        <%= item_category.category.name %>
                      </span>
                    <% end %>
                  <% end %>
                  
                  <span class="item-price"><%= item.price %>円(税込)</span>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <ul class="post-wrapper-for-pc">
            <%= @posts.find_each do |post| %>
              <li>
                <%= link_to youtuber_path(post.youtuber_id), class:"post-info" do %>
                  <%= image_tag post.thumbnail.url, class:"post-img"%>
                  <h3 class="post-title"><%=post.title%></h3>
                  <div class="youtuber-info">
                    <%=image_tag Youtuber.find(post.youtuber_id).image.url, class:"youtuber-img" %>
                    <span class="youtuber-name"><%= Youtuber.find(post.youtuber_id).name %></span>
                  </div>
                <% end %>
              </li>
            <% end %>  
          </ul>
        <% end %>
        
        <% if @items.present? %>
          <ul class="item-wrapper-for-sp">
            <%= @items.find_each do |item| %>
              <li class="item">
                <%= image_tag item.image.url, class:"item-img" %>
                <div>
                  
                  <%= ItemPost.where(item: item).find_each do |item_post| %>
                    <%=link_to youtuber_path(item_post.post.youtuber_id), class:"youtuber-info" do %>
                      <%=image_tag Youtuber.find(item_post.post.youtuber_id).image.url, class:"channel-icon" %>
                    <% end %>
                  <% end %>

                  <% if item.amazon_url %>
                    <%=link_to item.name, item.amazon_url, class:"item-name", target: :_blank %>
                  <% else %>
                    <%=link_to item.name, item.rakuten_url, class:"item-name", target: :_blank %>
                  <% end %>

                  <% item_category = PostItemCategory.find_by(item: item) %>
                  <% if item_category.present? %>
                    <%= link_to category_path(item_category.category_id), class:"item-category" do %>
                      <span class="category-child-title">
                        <%= item_category.category.name %>
                      </span>
                    <% end %>
                  <% end %>

                  <span class="item-price"><%= item.price %>円(税込)</span>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <ul class="post-wrapper-for-sp">
            <%= @posts.find_each do |post| %>
              <li>
                <%= link_to youtuber_path(post.youtuber_id), class:"post-info" do %>
                  <%= image_tag post.thumbnail.url, class:"post-img"%>
                  <h3 class="post-title"><%=post.title%></h3>
                  <div class="youtuber-info">
                    <%=image_tag Youtuber.find(post.youtuber_id).image.url, class:"youtuber-img" %>
                    <span class="youtuber-name"><%= Youtuber.find(post.youtuber_id).name %></span>
                  </div>
                <% end %>
              </li>
            <% end %> 
          </ul>
        <% end %>

        <div class="pagination-wrapper">
          <%= paginate @items %>
        </div>
    </div>
  </div>
</div>